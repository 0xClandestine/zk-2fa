            [19969862171064980945089780306616119239955564256937201093662481785175244323314,
             13342082259704651607107140115779058355684680286564384596338942845556563814022],
            [20135184425124694453753930280581182604774979000535471439181966734413298989383,
             10085409153052678213040604713527976977963615612683939796821325604576912596407]
        );
        vk.gamma2 = G2Point(
            [11559732032986387107991004021392285783925812861821192530917403151452391805634,
             10857046999023057135944570762232829481370756359578518086990519993285655852781],
